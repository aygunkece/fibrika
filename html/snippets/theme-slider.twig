                                {% if theme.settings['slider_title_' ~ slide] %}
                                    <h1 class="title-font title-slider delay2"
                                        style="color:{{ theme.settings['slider_title_color_' ~ slide] }};">{{ theme.settings['slider_title_' ~ slide] }}</h1>
